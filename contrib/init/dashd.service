[Unit]
Description=Fatzchain's distributed currency daemon
After=network.target

[Service]
User=fatzchain
Group=fatzchain

Type=forking
PIDFile=/var/lib/dashd/dashd.pid
ExecStart=/usr/bin/dashd -daemon -pid=/var/lib/dashd/dashd.pid \
-conf=/etc/fatzchain/fatzchain.conf -datadir=/var/lib/dashd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
